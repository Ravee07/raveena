<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTopic">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="topicName" class="control-label">Topic Name</label>
                <input asp-for="topicName" class="form-control" />
                <span asp-validation-for="topicName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary , style="white-space: normal; width:250px;background-color:green;" />
            </div>
        </form>
    </div>
</div>

