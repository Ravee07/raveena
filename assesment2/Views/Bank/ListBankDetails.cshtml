@model System.Data.DataTable
@{
    ViewBag.Title = "ListBankDetails";

}
<table class="table table-bordered table-striped">
    <tr>
        <th>Bankid</th>
        <th>EmpName </th>
        <th>DeptName </th>
        <th>BankName </th>
        <th>AccountNo </th>
        <th>BasicSalary</th>
        <th>HRA</th>
        <th>OtherAllowances</th>
        <th>GrossSalary</th>
        <th>Pf</th>
        <th>MedicalPremium</th>
        <th>TDS</th>
        <th>NetSalary</th>



    </tr>


    @for (int i = 0; i < Model.Rows.Count; i++)
    {
<tr>

    <td>@Model.Rows[i][0]</td>
    <td>@Model.Rows[i][1]</td>
    <td>@Model.Rows[i][2]</td>
    <td>@Model.Rows[i][3]</td>
    <td>@Model.Rows[i][4]</td>
    <td>@Model.Rows[i][5]</td>
    <td>@Model.Rows[i][6]</td>
    <td>@Model.Rows[i][7]</td>
    <td>@Model.Rows[i][8]</td>
    @*<td> <a href="@Url.Action("Gross","Bank", new { @id = @Model.Rows[i][0] })"> @Model.Rows[i][8]</a></td>*@
    <td>@Model.Rows[i][9]</td>
    <td>@Model.Rows[i][10]</td>
    <td>@Model.Rows[i][11]</td>
    <td>@Model.Rows[i][12]</td>

    <td>
        <a href="@Url.Action("DeleteBank","Bank",new { @id = @Model.Rows[i][0]})">Delete</a>

    </td>
</tr>

    }
</table>
